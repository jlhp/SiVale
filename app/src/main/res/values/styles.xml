<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="CustomActionBarTheme">
        <item name="colorPrimary">@color/actionbar_background</item>
        <item name="colorPrimaryDark">@color/statusbar_background</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="CardDataDialogStyle" parent="@style/Theme.AppCompat.Light.Dialog" >
        <item name="android:windowBackground">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>
    </style>

    <style name="MyListViewStyle" parent="@android:style/Widget.Holo.Light.ListView">
        <item name="android:background">@color/statusbar_background</item>
    </style>

    <!-- note: to re-use an existing Android attribute not already used by the superclass, name should have prefix "android:" and do not define a format -->
    <declare-styleable name="NumberPickerDialogPreference">
        <attr name="android:max" />
        <attr name="min" format="integer" />
        <attr name="android:negativeButtonText" />
        <attr name="android:positiveButtonText" />
        <attr name="android:dialogIcon" />
        <attr name="android:dialogTitle"/>
    </declare-styleable>
</resources>
