<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:fillViewport="false">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin">

        <android.support.v7.widget.CardView
            android:id="@+id/cardview"
            android:layout_width="250dp"
            android:layout_height="175dp"
            android:elevation="200dp"
            card_view:cardBackgroundColor="@color/background_test_color"
            card_view:cardCornerRadius="12dp"
            android:layout_marginLeft="@dimen/margin_large"
            android:layout_marginRight="@dimen/margin_large">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/edit"
                    android:layout_width="match_parent"
                    android:layout_height="25dp"
                    android:textAlignment="viewEnd"
                    android:paddingLeft="220dp"
                    android:tint="@color/background_test_light_color"
                    android:src="@mipmap/ic_edit" />

                <TextView
                    android:id="@+id/balance"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:paddingBottom="10dp"
                    android:layout_below="@+id/edit"
                    android:gravity="center"
                    android:textColor="@color/background_test_light_color"
                    android:textSize="40sp"
                    android:textStyle="bold"
                    android:text="$592.31" />

                <TextView
                    android:id="@+id/date"
                    android:layout_width="wrap_content"
                    android:layout_height="15dp"
                    android:gravity="center"
                    android:textColor="@color/background_test_light_color"
                    android:textStyle="bold"
                    android:textSize="9sp"
                    android:text="SiVale: Compras"
                    android:layout_centerHorizontal="true"
                    android:layout_below="@+id/balance" />

                <View
                    android:id="@+id/separator"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_below="@id/date"
                    android:layout_marginTop="10dp"
                    android:background="@color/background_test_light_color" />

                <TextView
                    android:id="@+id/date2"
                    android:layout_width="180dp"
                    android:layout_height="25dp"
                    android:gravity="center"
                    android:textColor="@color/background_test_light_color"
                    android:textStyle="bold"
                    android:textSize="9sp"
                    android:text="Septiembre 12, 2013 11:59:58"
                    android:layout_centerHorizontal="true"
                    android:layout_below="@+id/separator" />

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="25dp"
                    android:src="@mipmap/ic_calendar"
                    android:layout_below="@+id/separator"
                    android:layout_toLeftOf="@id/date2"
                    android:tint="@color/background_test_light_color" />

                <TextView
                    android:id="@+id/card"
                    android:layout_width="180dp"
                    android:layout_height="25dp"
                    android:gravity="center"
                    android:textColor="@color/background_test_light_color"
                    android:textStyle="bold"
                    android:textSize="9sp"
                    android:text="**** - **** - **** - 5214"
                    android:layout_centerHorizontal="true"
                    android:layout_below="@+id/date2" />

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="25dp"
                    android:src="@mipmap/ic_card"
                    android:layout_below="@+id/date2"
                    android:layout_toLeftOf="@id/card"
                    android:tint="@color/background_test_light_color" />

            </RelativeLayout>

        </android.support.v7.widget.CardView>

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_large">

            <TextView
                android:layout_width="@dimen/seekbar_label_length"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="@string/cardview_radius_seekbar_text"
                android:layout_centerVertical="true"
                android:layout_toStartOf="@+id/cardview_radius_seekbar" />

            <SeekBar
                android:id="@+id/cardview_radius_seekbar"
                android:layout_width="266dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_medium"
                android:layout_marginRight="@dimen/margin_medium"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="23dp" />

        </RelativeLayout>

    </LinearLayout>
</ScrollView>